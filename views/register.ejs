<% include ./partials/header %>
<div class="w-full h-screen bg-cover bg-[url('https://images.unsplash.com/photo-1541701494587-cb58502866ab?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTJ8fGFic3RyYWN0fGVufDB8fDB8fHww')] bg-center bg-zinc-300 flex items-center justify-center">
    <div class="w-[30vw]  bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-3xl text-center mb-10 font-semibold text-zinc-700 capitalize leading-none ">Create New Account</h1>
      <form action="/register" method="post">
        <input class="border-2 h-2 rounded-md block w-full mt-2 px-3 py-5 " type="text" name="username" placeholder="username">
        <input class="border-2 h-2 rounded-md block w-full mt-2 px-3 py-5 " type="text" name="name" placeholder="name">
        <input class="border-2 h-2 rounded-md block w-full mt-2 px-3 py-5 " type="email" name="email" placeholder="email">
        <input class="border-2 h-2 rounded-md block w-full mt-2 px-3 py-5 " type="password" name="password" placeholder="password">
        <input class="border-2 h-2 rounded-md block w-full mt-2 px-3 py-5 " type="tel" id="contact" name="contact" pattern="[0-9]{10}" placeholder="1234567890" required>
        <input class="border-2 h-10 text-center text-white block w-full mt-5 px-3 py-1 bg-red-600 rounded-full" type="submit" name="submit" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterst's <strong>Terms of Service</strong> and acknowledge that you've read our <strong>Privacy Policy Notice at collecton</strong></p>
      </form>
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Already have Account? Login </a>
    </div>
</div>   
<% include ./partials/footer %>